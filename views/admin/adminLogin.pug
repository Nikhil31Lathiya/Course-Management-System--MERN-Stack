//- views/admin/adminLogin.pug
extends ../layout

block head
    link(rel="stylesheet", href="/css/adminLogin.css")

block content
    .container
        .admin-login-wrapper
            img.logo(src="/images/1.webp", alt="Course Registration System Logo") 

            h2 Admin Login

            if error
                .alert.alert-danger #{error}

            //- Admin Login Form
            form(action="/admin/login", method="POST", class="admin-login-form")
                .mb-3
                    label(for="username") Username:
                    input#username.form-control(type="text", name="username", placeholder="Enter your username", required)
                .mb-3
                    label(for="password") Password:
                    input#password.form-control(type="password", name="password", placeholder="Enter your password", required)
                button.btn.btn-primary.btn-block(type="submit") Login

            .additional-links.mt-3
                p
                    a(href="/") Back to User Login
